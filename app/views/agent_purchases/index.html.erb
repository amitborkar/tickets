<% title "结算列表" %>

<div id="search">
  <%= form_tag agent_purchases_path, :method => :get do %>
      <fieldset class="inputs">
        <label for="agent_name">景区名称</label>
        <%= text_field_tag :spot_name, params[:spot_name] %>
        <label for="date">入园截止日期</label>
        <%= text_field_tag :date, params[:date], :class=>"maxdate_datepicker" %>
      </fieldset>
      <fieldset class="buttons">
        <%= submit_tag "查询" %>
      </fieldset>
  <% end %>
</div>

<table>
  <tr>
    <th>景区名称</th>
    <th>门票种类</th>
    <th>支付方式</th>
    <th>总订单数</th>
    <th>应收应付</th>
    <th>金额</th>
    <th>操作</th>
  </tr>
  <% for item in @table %>
      <tr>
        <td><%= item.spot_name%></td>
        <td><%= show_reservation_type_with(item.type) %></td>
        <td><%= show_payment_method(item.payment_method) %>  </td>
        <td><%= item.count_sum %></td>
        <td><%= show_in_or_out_for_agent(item) %> </td>
        <td><%= item.price_sum %></td>
        <td><%= link_to "查看", reservations_agent_purchases_path(:spot_id => item.spot_id, :type => item.type, :payment_method => item.payment_method, :date => @date, :spot_name => @spot_name) %></td>
      </tr>
  <% end %>
</table>
