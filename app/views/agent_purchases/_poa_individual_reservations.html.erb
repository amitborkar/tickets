<table id="purchase_table">
  <tr>
    <th>选择<%= check_box_tag 'reservation_select_all' %></th>
    <th>订单号</th>
    <th>门票</th>
    <th>入园日期</th>
    <th>种类</th>
    <th>成人价(销售价/(结算价))</th>
    <th>儿童价(销售价/(结算价))</th>
    <th>成人票数量</th>
    <th>儿童票数量</th>
    <th>总价(销售价/(结算价))</th>
    <th>应收</th>
    <th>支付方式</th>
    <th>联系人</th>
    <th>联系电话</th>
    <th>预定日期</th>
  </tr>
  <% for reservation in @reservations %>
      <tr id="reservation<%= reservation.id %>_row">
        <td><%= check_box_tag 'reservation_ids[]', reservation.id %></td>
        <td><%= reservation.no %></td>
        <td><%= reservation.ticket_name %></td>
        <td> <%= reservation.date %>  </td>
        <td> <%= show_reservation_type(reservation) %></td>
        <td> <%= show_reservation_adult_price(reservation) %> </td>
        <td> <%= show_reservation_child_price(reservation) %></td>
        <td><%= reservation.adult_true_ticket_number %></td>
        <td><%= reservation.child_true_ticket_number %></td>
        <td><%= show_reservation_total_price(reservation) %></td>
        <td><%= reservation.total_price - reservation.total_purchase_price %></td>
        <td><%= show_reservation_payment_method(reservation) %></td>
        <td><%= reservation.contact %></td>
        <td><%= reservation.phone %></td>
        <td><%= date_format(reservation.created_at) %></td>
      </tr>
  <% end %>
</table>

<%= submit_tag "设置为已结算", :confirm => "确认要将选择的订单设置为已结算吗？" %>
<input type="button" id="generate_purchase_report_button" value="生成对帐单"/>