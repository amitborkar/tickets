<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
  <title>登陆</title>
  <%= stylesheet_link_tag 'index', :media => 'screen' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="div1"><img src="/images/loginbg01.jpg" style="width:100%; height:100%;"/></div>

<div id="apDiv1"></div>

<div id="apDiv2">旅行社 登陆</div>
<div id="apDiv3">

  
  <%= form_tag sessions_path, :class => "simple_form" do %>
      <table width="100%" border="0" cellspacing="0">
        <tr>
          <td width=300></td>
          <td align="center">
            <table border="0" cellspacing="0" cellpadding="5" style="width:740px;">
              <tr>
                <td width=60 align="right">用户名</td>
                <td width=200 align="left"> <%= text_field_tag :login, params[:login] %></td>
                <td width=60 align="right">密码</td>
                <td width=200 align="left"><%= password_field_tag :password %></td>
                <%= hidden_field_tag :from,"agent" %>
                <td width=100 align="center"> <%= submit_tag "登陆", :class => "btn" %></td>
                <td width=100 align="center"> <%= button_to_link "注册", new_agent_path,  :class => "btn" %></td>
              </tr>
              <tr>
                <td colspan="5" align="center">
                  如需帮助，请发送邮件到 <a href="#">as.support@derbysoft.com</a>
                </td>
              </tr>
			  
			  <tr>
                <td colspan="5" align="center">
                  <% flash.each do |name, msg| %>
					  <div class="flash <%= name %>"><%= msg %></div>
				  <% end %>
                </td>
              </tr>
			  
            </table>
          </td>
        </tr>
      </table>
  <% end %>
</div>
</body>
</html>
