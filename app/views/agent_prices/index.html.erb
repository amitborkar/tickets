<% title "旅行社价格" %>

<% season_size = @spot.seasons.size %>
<% ticket_size = @spot.tickets.size %>
<table>
  <tr>
    <th rowspan="3">名称</th>
    <th rowspan="3">门票</th>
    <th colspan=<%= 4*season_size %>>散客价</th>
    <th colspan=<%= 2*season_size %>>团队价</th>
    <th rowspan="3" colspan="2">操作</th>
  </tr>
  <tr>
    <% for season in @spot.seasons %>
        <th colspan="4"><%= season.name %></th>
    <% end %>
    <% for season in @spot.seasons %>
        <th colspan="2"><%= season.name %></th>
    <% end %>
  </tr>
  <tr>
    <% season_size.times do %>
        <th>成人结算价</th>
        <th>成人售价</th>
        <th>儿童结算价</th>
        <th>儿童售价</th>
    <% end %>
    <% season_size.times do %>
        <th>成人售价</th>
        <th>儿童售价</th>
    <% end %>

  </tr>

  <% for agent_price in @agent_prices %>
      <% count = 1 %>
      <tr>
        <th rowspan="<%= ticket_size %>"><%= agent_price.name %></th>
        <% for ticket in @spot.tickets %>
            <% if (count > 1) %>
              <tr>
          <% end %>
          <th><%= ticket.name %></th>
          <% for season in @spot.seasons %>
              <% individual_rate = agent_price.individual_rate_for(season.name, ticket.name) %>
              <th> <%= individual_rate.adult_purchase_price %> </th>
              <th> <%= individual_rate.adult_sale_price %></th>
              <th> <%= individual_rate.child_purchase_price %> </th>
              <th> <%= individual_rate.child_sale_price %></th>
              <% team_rate = agent_price.team_rate_for(season.name, ticket.name) %>
              <th>
                <%= team_rate.adult_price %>
              </th>
              <th>
                <%= team_rate.child_price %>
              </th>
          <% end %>
           <% if (count == 1) %>
          <th rowspan="<%= ticket_size %>"><%= link_to "修改", edit_agent_price_path(agent_price) %></th>
          <th rowspan="<%= ticket_size %>"><%= link_to "删除", agent_price, :confirm => '你确认删除吗?', :method => :delete %></th>
           <%end%>
          <% count += 1 %>
      <% end %>

      </tr>

  <% end %>
</table>

<p><%= link_to "新建旅行社价格", new_agent_price_path %></p>
