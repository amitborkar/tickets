<% title "配置价格关联" %>

<%= simple_form_for @rfp, :url => accept_rfp_path(@rfp), :method => :put do |f| %>
    旅行社名称<%= f.object.agent.name %><br/>
    <%= f.association :agent_price, :collection => @rfp.spot.agent_prices  %>
    <%= f.input :team_payment_method, :collection => [["门口现付", "poa"], ["挂账", "prepay"]],
                :label_method => :first, :value_method => :last,
                :as => :select, :label => "团队票结算方式", :required => false, :include_blank => false %>
    <%= f.input :individual_payment_method, :collection => [["门口现付", "poa"], ["挂账", "prepay"]],
                :label_method => :first, :value_method => :last,
                :as => :select, :label => "散客票结算方式", :required => false, :include_blank => false %>
    <p><%= f.submit %></p>
<% end %>

<p>
  <%= link_to "返回列表", rfps_path %>
</p>
