<%= simple_form_for @rfp do |f| %>
    <% if f.object.new_record? %>
        <%= f.association :agent, :collection => Agent.not_connected_with_spot(@rfp.spot) %>
    <% else %>
        <%= f.association :agent, :disabled => true %>
    <% end %>
    <%= f.association :agent_price, :collection => @rfp.spot.agent_prices %>
    <p><%= f.submit %></p>
<% end %>
