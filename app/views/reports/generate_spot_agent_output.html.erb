<%= render 'report_paginate' %>
<table>
  <%= render 'report_detail' %>
  <tr>
    <td>旅行社名称</td>
    <td>订单总数</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>预订成人票</td>
    <td>预订儿童票</td>
    <td>实际成人票</td>
    <td>实际儿童票</td>
    <td>总价</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <% @table.each do |r| %>
      <tr class="<%= cycle("even", "odd") %>">
        <td><%= r.agent_name %></td>
        <td><%= r.count_sum %></td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td><%= r.adult_ticket_sum.to_i %></td>
        <td><%= r.child_ticket_sum.to_i %></td>
        <td><%= r.adult_true_ticket_sum.to_i %></td>
        <td><%= r.child_true_ticket_sum.to_i %></td>
        <td><%= r.price_sum.to_i %></td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
  <% end %>
</table>
<% if @reservationsTable.present? %>
    <div class="bottom_links">
      <%= button_to_new_window "PDF下载", reports_generate_spot_agent_output_path(:format => "pdf", :type => params[:type],
                                                                                :year => params[:year], :month => params[:month],
                                                                                :day => params[:day], :week => params[:week],
                                                                                :start_report_time => params[:start_report_time],
                                                                                :end_report_time => params[:end_report_time],
                                                                                :agent_name => params[:agent_name],
                                                                                :ticket_name => params[:ticket_name],
                                                                                :reservation_type => params[:reservation_type]
      ) %>
      <%= button_to_new_window "Excel下载", reports_generate_spot_agent_output_path(:format => "xls", :type => params[:type],
                                                                                  :year => params[:year], :month => params[:month],
                                                                                  :day => params[:day], :week => params[:week],
                                                                                  :start_report_time => params[:start_report_time],
                                                                                  :end_report_time => params[:end_report_time],
                                                                                  :agent_name => params[:agent_name],
                                                                                  :ticket_name => params[:ticket_name],
                                                                                  :reservation_type => params[:reservation_type]
      ) %>
    </div>
<% end %>


