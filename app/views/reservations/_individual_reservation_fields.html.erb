<fieldset class="inputs">
  <%= f.input :spot_id, :as => :hidden %>
  <%= f.input :ticket_name, :as => :hidden %>
  <%= f.input :child_sale_price, :as => :hidden %>
  <%= f.input :child_purchase_price, :as => :hidden %>
  <%= f.input :adult_sale_price, :as => :hidden %>
  <%= f.input :adult_purchase_price, :as => :hidden %>
  <%= f.input :payment_method, :as => :hidden %>
  <div class="input string required"><label>景区</label><%= f.object.spot.name %></div>
  <div class="input string required"><label>门票</label> <%= f.object.ticket_name %></div>
  <%= f.input :date, :required => true, :as => :string, :input_html => {:class => "book_datepicker"} %>
  <div class="input string required"><label>入园日期</label><%= f.object.date %></div>
  <div class="input string required"><label>成人价</label><%= f.object.adult_sale_price %></div>
  <% unless f.object.child_sale_price.nil? %>
      <div class="input string required"><label>儿童价</label><%= f.object.child_sale_price %></div>
  <% end %>
  <%= f.input :adult_ticket_number, :as => :integer, :required => true %>
  <% unless f.object.child_sale_price.nil? %>
      <%= f.input :child_ticket_number, :as => :integer, :required => true %>
  <% end %>
  <div class="input string required"><label>总价</label>
    <span id="total_price_text"><%= f.object.total_price %></span>
  </div>
  <%= f.input :group_no %>
  <%= f.input :contact %>
  <%= f.input :phone %>
  <div class="input string required"><label>支付方式</label> <%= show_reservation_payment_method(@reservation) %></div>
</fieldset>
<fieldset class="buttons">
  <%= f.button :submit, (f.object.new_record? ? "预订" : "修改") %>
</fieldset>
