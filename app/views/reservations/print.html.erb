<% type = @reservation.is_individual? ? "散客" : "团队" %>
<% title "#{@reservation.agent.name}旅行社#{type}订单" %>
<div class="print">
  <table>
    <tr>
      <td>景区名称:</td>
      <td colspan="3"> <%= @reservation.spot.name %></td>
    </tr>

    <tr>
      <td>订单号:</td>
      <td><%= @reservation.no %></td>
      <td>团号:</td>
      <td><%= @reservation.group_no %></td>
    </tr>

    <tr>
      <td>门票:</td>
      <td><%= @reservation.ticket_name %></td>
      <td>门票种类:</td>
      <td><%= show_reservation_type(@reservation) %></td>
    </tr>

    <tr>
      <td>状态:</td>
      <td><%= @reservation.status_name %></td>
      <td>支付方式:</td>
      <td><%= show_reservation_payment_method(@reservation) %></td>
    </tr>

    <tr>
      <td colspan="4"> </td>
    </tr>
    <% adult_price = @reservation.is_individual? ? @reservation.adult_sale_price : @reservation.adult_price;
            child_price = @reservation.is_individual? ? @reservation.child_sale_price : @reservation.child_price %>
    <tr>
      <td>成人销售价格:</td>
      <td><%= adult_price %></td>
      <td>数量:</td>
      <td><%= @reservation.adult_ticket_number %></td>
    </tr>

    <tr>
      <td>儿童销售价格:</td>
      <td><%= child_price %></td>
      <td>数量:</td>
      <td><%= @reservation.child_ticket_number %></td>
    </tr>

    <tr>
      <td>总价:</td>
      <td colspan="3"> <%=@reservation.total_price %></td>
    </tr>

    <tr>
       <td colspan="4"> </td>
    </tr>

    <tr>
      <td>联系人:</td>
      <td><%= @reservation.contact %></td>
      <td>联系方式:</td>
      <td> <%= @reservation.phone %></td>
    </tr>

    <tr>
       <td colspan="4"> </td>
    </tr>

     <tr>
      <td>订单咨询电话:</td>
      <td colspan="3"><%= @reservation.spot.business_phone %> </td>
    </tr>

    <tr>
       <td colspan="4"> </td>
    </tr>

    <tr>
       <td colspan="4">祝您旅途愉快！ </td>
    </tr>

  </table>

</div>
<p>
  <a href="#" onclick="window.print();return false;">打印</a>
</p>
