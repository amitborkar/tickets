<%= payment_service_for @reservation.no, "111111", :service => :alipay, :html => {:id => 'payment-form', :method => :get} do |service| %>
    <%= service.total_fee @reservation.total_price %>
    <%= service.seller :email => "aaa@aaa.com" %>
    <%= service.notify_url url_for(:only_path => false, :controller => 'reservations', :action => 'notify') %>
    <%= service.return_url url_for(:only_path => false, :controller => 'reservations', :action => 'done') %>
    <%= service.charset "utf-8" %>
    <%= service.service ActiveMerchant::Billing::Integrations::Alipay::Helper::CREATE_DIRECT_PAY_BY_USER %>
    <%= service.payment_type 1 %>
    <%= service.subject '捐助activemerchat_ptch_for_china项目' %>
    <%= service.sign %>

    <%= button_to_function "确认", "document.getElementById('payment-form').firstChild.remove();document.getElementById('payment-form').submit()" %>
    &nbsp;&nbsp;
    <%= link_to '返回首页', root_path %>
<% end %>