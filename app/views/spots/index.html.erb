<% title "Spots" %>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
  </tr>
  <% for spot in @spots %>
    <tr>
      <td><%= spot.name %></td>
      <td><%= spot.code %></td>
      <td><%= spot.description %></td>
      <td><%= link_to "Show", spot %></td>
      <td><%= link_to "Edit", edit_spot_path(spot) %></td>
      <td><%= link_to "Destroy", spot, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Spot", new_spot_path %></p>
