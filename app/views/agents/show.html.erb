<% title "旅行社" %>

<table class="newtable">
  <tr>
    <td class="textright">景区名称</td>
    <td class="textleft"><%= @agent.name %> </td>
    <td class="textright">状态</td>
    <td class="textleft"><%= show_disabled @agent.disabled? %></td>
  </tr>

  <tr>
    <td class="textright">市场部联系人</td>
    <td class="textleft"><%= @agent.business_contact %></td>
    <td class="textright">市场部联系方式</td>
    <td class="textleft"><%= @agent.business_phone %></td>
  </tr>

  <tr>
    <td class="textright">财务部联系人</td>
    <td class="textleft"><%= @agent.finance_contact %></td>
    <td class="textright">财务部联系方式</td>
    <td class="textleft"><%= @agent.finance_phone %></td>
  </tr>

  <tr>
    <td class="textright">地址</td>
    <td class="textleft" colspan="3"><%= @agent.address %></td>
  </tr>

  <tr>
    <td class="textright">描述</td>
    <td class="textleft" colspan="3"> <%= @agent.description %></td>
  </tr>


  <tr>
    <td class="textright">管理员用户名</td>
    <td class="textleft"><%= @agent.admin.username %> </td>
    <td class="textright">管理员姓名</td>
    <td class="textleft"><%= @agent.admin.name %></td>
  </tr>

  <tr>
    <td class="textright">管理员邮箱</td>
    <td class="textleft"><%= @agent.admin.email %></td>
    <td class="textright"></td>
    <td class="textleft"></td>
  </tr>


</table>

<table class="formtable01">
  <tr class="formtable01">
    <td class="formtable01" style="text-align:center; ">
      <%= button_to "修改", edit_agent_path(@agent), {:class=> "btn", :style=> "float:none;", :method => :get} %>
      <%= button_to "旅行社列表", agents_path , {:class=> "btn", :style=> "float:none;", :method => :get}%>
      <%= button_to "返回", "#", :class=> "btn", :style=> "float:none;", :onclick => "history.back(); return false;" %>
    </td>

  </tr>
</table>