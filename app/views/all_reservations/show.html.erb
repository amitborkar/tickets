<% title "订单明细" %>

<p>
  <strong>订单号:</strong>
  <%= @reservation.no %>
</p>
<p>
  <strong>景区名称:</strong>
  <%= @reservation.spot.name %>
</p>
<p>
  <strong>旅行社名称:</strong>
  <%= @reservation.agent.name %>
</p>
<p>
  <strong>门票:</strong>
  <%= @reservation.ticket_name %>
</p>
<p>
  <strong>种类:</strong>
  <%= show_reservation_type(@reservation) %>
</p>
<p>
  <strong>日期:</strong>
  <%= @reservation.date %>
</p>
<p>
  <strong>预定日期:</strong>
  <%= date_format(@reservation.created_at) %>
</p>
<p>
  <strong>状态:</strong>
  <%= @reservation.status_name %>
</p>
<p>
  <strong>成人价格:</strong>
  <%= show_reservation_adult_price(@reservation) %>
</p>
<p>
  <strong>儿童价格:</strong>
  <%= show_reservation_child_price(@reservation) %>
</p>
<p>
  <strong>成人票数量:</strong>
  <%= @reservation.adult_ticket_number %>
</p>
<p>
  <strong>儿童票数量:</strong>
  <%= @reservation.child_ticket_number %>
</p>
<p>
  <strong>成人票实际数量:</strong>
  <%= @reservation.adult_true_ticket_number %>
</p>
<p>
  <strong>儿童票实际数量:</strong>
  <%= @reservation.child_true_ticket_number %>
</p>
<p>
  <strong>总价:</strong>
  <%= show_reservation_total_price(@reservation) %>
</p>
<p>
  <strong>联系人:</strong>
  <%= @reservation.contact %>
</p>
<p>
  <strong>联系方式:</strong>
  <%= @reservation.phone %>
</p>

<p>
  <%= link_to "返回列表", all_reservations_path %>
</p>
