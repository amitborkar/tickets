[
    <% @menu_groups.each do |menu_group| %>
    {
        "data" : "<%= menu_group.name %>" ,
        "state" : "open",
        "children" :
                [
                    <% menu_group.menus.each do |menu| %>
                    {
                        "data" : "<%= menu.name %>",
                        "attr": {"id": "<%= menu.id%>"}

                    }
                    <%= "," unless menu == menu_group.menus.last %>
                    <% end %>
                ]
    }
    <%= "," unless menu_group == @menu_groups.last %>
    <% end%>
]